<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Reinhold.AddHobbyPage"
             BackgroundColor="#1c1c1c"
             Title="Hobby">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="New hobby" Style="{StaticResource HeadlineWithoutMargin}"/>
            <StackLayout Orientation="Horizontal">
                <Label Text="Hobby" Style="{StaticResource Note}" HorizontalOptions="Start"/>
                <Entry x:Name="HobbyEntry" Text="{Binding Hobby}" Style="{StaticResource EntryOnTheSameLine}" HorizontalOptions="FillAndExpand"/>
            </StackLayout>
            <Button x:Name="AddButton" Text="Add" Clicked="AddButton_Clicked" HorizontalOptions="CenterAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
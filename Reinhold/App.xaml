<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Reinhold.App">
    <Application.Resources>
        <ResourceDictionary>
            <Style x:Key="Headline" TargetType="Label">
                <Setter Property="FontSize" Value="Large"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="Margin" Value="0,30,0,0"/>
            </Style>
            <Style x:Key="HeadlineWithoutMargin" TargetType="Label" BasedOn="{StaticResource Headline}">
                <Setter Property="Margin" Value="0"/>
            </Style>
            <Style x:Key="Note" TargetType="Label">
                <Setter Property="FontSize" Value="Medium"/>
                <Setter Property="TextColor" Value="#999999"/>
            </Style>
            <Style x:Key="IconImage" TargetType="Image">
                <Setter Property="Aspect" Value="Fill"/>
                <Setter Property="HeightRequest" Value="40"/>
                <Setter Property="WidthRequest" Value="40"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>